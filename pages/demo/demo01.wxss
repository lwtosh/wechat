

swiper {
  height: 250px;
  position: relative;
}

.slide-image {
  width: 65%;
  height: 100%;
  display: block;
  margin: auto;
}

.desc-1 {
  padding: 0 20px;
  position: relative;
}

.product-item {
  color: #404040;
  font-size: 42rpx;
}

.product-money {
  font-size: 48rpx;
  color: #ff435c;
  margin-top: 0.2rem;
  padding-bottom: 0.4rem;
}

.mon {
  font-size: 36rpx;
}

.dong {
  width: 178rpx;
  height: 180rpx;
  position: absolute;
  top: -3vh;
  right: 1vw;
  z-index: 999;
  -webkit-animation: roundRule 2.5s ease-in-out infinite;
}

@keyframes roundRule {
  0%, 100% {
    -webkit-transform: rotate(-15deg);
  }

  50% {
    -webkit-transform: rotate(15deg);
  }
}

.number {
  width: 370rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 2rem;
  color: #fff;
  border-radius: 20rpx;
  background-image: linear-gradient(to right, #ff758c 0%, #ff435c 100%);
  font-family: "Helvetica Neue Light",
                 "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Lucida Grande",
                 sans-serif;
}

.box-wrap, .btn-wrap {
  display: flex;
  justify-content: center;
  margin: 3vh auto;
  color: #404040;
}

.box-wrap span {
  margin-right: 0.8vw;
}

.box-wrap .point {
  width: 3vw;
  margin-top: 1rem;
}

.button {
  color: #fff;
  background-color: #ff435c;
  border-radius: 30rpx;
  font-weight: 300;
  font-size: 20px;
  font-family: "Helvetica Neue Light",
                 "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Lucida Grande",
                 sans-serif;
  text-decoration: none;
  text-align: center;
  line-height: 50px;
  height: 50px;
  padding: 0 20px;
  margin: 0;
  display: inline-block;
  border: none;
}

.wrap-cishu {
  color: #404040;
  padding: 0.4rem 0.6rem;
  font-size: 42rpx;
  background: #fff;
  border-top: 8px solid #f5f5f5;
  border-bottom: 8px solid #f5f5f5;
}

.left {
  display: inline-block;
  text-align: left;
}

.num {
  color: #ff435c;
}

.mai {
  float: right;
  color: #bfbfbf;
  text-decoration: none;
}

.mai:link {
  color: #ff435c;
}

.mai:hover {
  color: #ff435c;
}

